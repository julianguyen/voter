<h1>Welcome!</h1>

<div class="notice">
<%=h flash[:notice]%>
</div>

<p>
	<%= link_to 'New Question', new_question_path %>
</p>

<table>
<% @questions.each do |q| %>
	<tr class="questionRow">
		<td class="question">
			<div>
			   <%= q.question %> 

   	    	   <%= link_to 'Answers', answers_path(:questionid => q.id), :class => "answers" %>
	
			   <%= link_to 'Edit Question', edit_question_path(:id => q.id, :type => "edit"), :class => "editQuestion" %>

			   <%= link_to 'Delete Q&A', q, method: :delete, :class => "delete" %>
			</div>   
     	</td>
	</tr> 
<% end %>
</table>