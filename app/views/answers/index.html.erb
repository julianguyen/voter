<h1>Welcome!</h1>

<div class="notice">
	<%=h flash[:notice]%>
</div>

<p>
	<%= link_to 'Add an answer', new_answer_path(:questionid => @questionid) %>
</p>

<table>
<% @answers.each do |a| %>
	<tr>
		<td><%= Question.where(:id => a.questionid).first.question %></td>
		<td><%= a.answer %></td>
		<td><%= link_to 'Edit Answer', edit_answer_path(:id => a.id, :questionid => a.questionid, :type => "edit") %></td>
		<td><%= link_to 'Delete Answer', a, method: :delete %></td>
	</tr>
<% end %>
</table>