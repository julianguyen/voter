<h1>Welcome!</h1>

<div class="notice">
	<%=h flash[:notice]%>
</div>

<p>
	<%= link_to 'Add an answer', new_answer_path(:questionid => @questionid) %>
</p>

<table>
<% @answers.each do |a| %>
	<tr class="answerRow">
		<td class="answer">
			<%= Question.where(:id => a.questionid).first.question %>
			
			<%= a.answer %>
			
			<%= link_to 'Edit Answer', edit_answer_path(:id => a.id, :questionid => a.questionid, :type => "edit"), :class => "editAnswer" %>
			
			<%= link_to 'Delete Answer', a, method: :delete, :class => "delete" %>
		</td>
	</tr>
<% end %>
</table>