<h1><%= Question.where(:id => @questionid).first.question %></h1>

<div class="notice">
	<%=h flash[:notice]%>
</div>

<%= form_tag voting_votes_path do %>
 
	<% @answers.each do |a| %>
		<input type="radio" name="ans" value="<%= a.id %>" id="<%= a.answer %>"><%= a.answer %><br />
	<% end %> 

	<%= submit_tag "Submit" %>
<% end %>
